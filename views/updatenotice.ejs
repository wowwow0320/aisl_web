<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Notice</title>
</head>
<body>
<h1>Update Notice</h1>
<form id="updateForm" enctype="multipart/form-data">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
    </div>
    <div>
        <label for="contents">Contents:</label>
        <textarea id="contents" name="contents" required></textarea>
    </div>
    <div>
        <label for="img">Image:</label>
        <input type="file" id="img" name="img" onchange="imageAdded()">
    </div>
    <input type="hidden" id="imgStatus" name="imgStatus" value="0">
    <button type="button" onclick="deleteImage()">Delete Image</button>
    <button type="submit">Update Notice</button>
</form>

<script>
    let imgStatus = document.getElementById('imgStatus');

    function imageAdded() {
        imgStatus.value = '1';
    }

    function deleteImage() {
        imgStatus.value = '2';
    }

    document.getElementById('updateForm').addEventListener('submit', (e) => {
        e.preventDefault();

        const formData = new FormData(e.target);

        fetch('/update/:noticeid', {
            method: 'POST',
            body: formData,
        })
            .then(response => response.json())
            .then(result => {
                console.log(result);
            })
            .catch(error => {
                console.error(error);
            });
    });
</script>
</body>
</html>
